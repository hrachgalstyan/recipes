extends base

block content
    main.main
        .card-container
            each recipe in recipes
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/recipes/${recipe.image}`, alt=`${recipe.name}`)
                        h3.heading-tertirary
                            span= recipe.name

                    .card__details
                        h4.card__sub-heading= `Բարդությունը։ ${recipe.difficulty}`
                        p.card__text= `Այս բաղադրատոմսը համեղ է և ձեր օրը սկսելու հիանալի միջոց:`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span Հայկական
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            span= recipe.createdAt.toLocaleString('en-us', {day: 'numeric', month: 'long', year: 'numeric'})
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-flag')
                            span= `${recipe.time} րոպե`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= `${recipe.people} հոգի`

                    .card__footer
                        p
                            span.card__footer-value= `Կարծիքներ։ `
                            |
                            span.card__footer-text=`${recipe.ratingsQuantity}`
                        p.card__ratings
                            span.card__footer-value= recipe.ratingsAverage
                            |
                            span.card__footer-text= ` rating (${recipe.ratingsQuantity})` 
                        a.btn.btn--green.btn--small(href=`/recipe/${recipe._id}`) Details